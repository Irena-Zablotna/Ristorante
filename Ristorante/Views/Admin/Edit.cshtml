@model Ristorante.Models.Piatto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Adminpage.cshtml";
}

<h3>Modifica</h3>

<h4>Piatto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo_piatto" class="control-label"></label>
                <select asp-for="Tipo_piatto" class="form-control" asp-items="ViewBag.Tipo_piatto"></select>
                <span asp-validation-for="Tipo_piatto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="VediMenu">Torna alla lista</a>
</div>

