@using Ristorante.VievModels
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager
@model RegisterViewModel


@{
    ViewData["Title"] = "Registrati";
}


@section Styles{
    <style>
        #smain {
            border-bottom: none;
            padding-top:5%;
        }

        #information p {
            color: white;
            font-size: 14px;
            width: 50%;
            margin: auto;
        }

        #signupDiv {
            width: 50%;
            margin: auto;
        }
        input{
            margin-bottom:0px;
        }
    </style>

}

@{
    if ((signInManager.IsSignedIn(User)))
    {
        @section information {<p style=" font-weight: normal;"> Grazie per la tua registrazione  @User.Identity.Name!</p>}

    }

    else
    {
        @section information{ <p styke="font-size:16px"> Registrati! </p>}
    }

    <div class="signupDiv">
        <form method="post" asp-controller="Account" asp-action="Registrazione">

            <i class="fa fa-user"></i>
            <input asp-for="Username" id="username1" placeholder="Scegli la tua username" autofocus />
            <span asp-validation-for="Username" style="color:white;"></span>

            <i class="fa fa-envelope"></i>
            <input asp-for="Email" id="email" placeholder="Email">
            <span asp-validation-for="Email" style="color:white;"></span>

            <i class="fa fa-lock"></i>
            <input asp-for="Password" id="password1" placeholder="Password">
            <span asp-validation-for="Password" style="color:white;"></span>

            <i class="fa fa-lock"></i>
            <input asp-for="ConfirmPassword" id="password2" placeholder="Ripeti la password">
            <span asp-validation-for="ConfirmPassword" style="color:white;"></span>

            <div asp-validation-summary="All" style="color:white;font-size:10px;"></div>

            <button type="submit" id="registrati">Registrati</button>
        </form>
    </div>

}

