<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ristorante</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="wrapper">
        <div id="topbar">
            <div id="logo">
                <img src="~/images/close-up-fresh-mint-leaves-removebg-preview.png" alt="logo">
            </div>
            <div id="menu">
                <ul>
                    <a href="#" style="color:#ffa17a">"L'oasi del gusto"</a>
                    <a href="Piatti.html" target="_blank"> I nostri piatti</a>
                    <a href="#">La nostra storia</a>
                    <a href="#">Lo staff</a>
                    <a href="Dove.html" target="_blank">Dove siamo</a>
                </ul>
            </div>
        </div>
        <main>
            <section id="smain">
                @RenderBody()
            </section>
            <footer>
                <p id="contact">Contattaci</p>
                <p id="phone"><i class="fa fa-phone"></i> 0123 123456</p>
                <p><i class="fa fa-envelope"></i> mail@mail.com</p>
                <div id="social">
                    <a href="https://it-it.facebook.com/" target="_blank"><i class="fa fa-facebook-square"></i></a>
                    <a href="https://www.instagram.com/" target="_blank"><i class="fa fa-instagram"></i></a>
                    <a href="https://twitter.com/login?lang=it" target="_blank"><i class="fa fa-twitter-square"></i></a>
                    <a href="https://api.whatsapp.com/send?phone=393293333333" target="_blank"><i class="fa fa-whatsapp"></i></a>
            </footer>
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>