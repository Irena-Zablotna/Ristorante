<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ristorante</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<body>
    <div class="wrapper1">
        <div id="topbar">
            <div id="logo">
                <img src="~/images/close-up-fresh-mint-leaves-removebg-preview.png" alt="logo">
            </div>
            <div id="menu">
                <ul>
                    <a asp-area="" asp-controller="Home" asp-action="Index" style="color:#ffa17a">"L'oasi del gusto"</a>
                    <a asp-area="" asp-controller="Home" asp-action="Piatti"> I nostri piatti</a>
                    <a asp-area="" asp-controller="Home" asp-action="Prenota">Dove siamo<br> Prenota online</a>
                </ul>
                <div id="logindiv">
                    <partial name="~/Views/PartialViews/_Login.cshtml" />
                </div>
            </div>
        </div>
        <div class="big-box">
            <section class="sec-tab" id="s1">
                <h3>antipasti</h3>
                @RenderSection("s1", false)
            </section>

            <section id="s2" class="sec-tab">
                <h3>primi piatti</h3>
                @RenderSection("s2", false)
            </section>

            <section class="sec-tab" id="s3">
                <h3>secondi piatti</h3>
                @RenderSection("s3", false)
            </section>

        </div>
        <div class="big-box">
            <section class="sec-tab" id="s4">
                <h3>dessert</h3>
                @RenderSection("s4", false)
            </section>

            <section class="sec-tab" id="s5">
                <h3>bibite</h3>
                @RenderSection("s5", false)
            </section>

        </div>
        @*color: #070707d8;*@
        <a href='#top' class="top-button">
            <i class="fa fa-chevron-up" style="color:#070707d8"></i>
        </a>
        @RenderBody()
    </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>

</html>