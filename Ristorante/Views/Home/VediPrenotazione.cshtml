
@{
    ViewData["Title"] = "Gestisci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

@model Prenotazione


<style>
    #smain {
        border-bottom: none;
    }

    #contactform p {
        font-weight: normal;
        line-height: 150%;
        font-size: 16px;
    }
</style>


<div id="contact1">
    <h3>ti aspettiamo in via Braccini 17, Torino</h3>
    <div id="contactform">

        @if (Startup.Conferma == 5)
        {
            <p>La tua prenotazione n. @TempData["num"] è stata cancellata</p>
        }
        else
        { 
            <p> Gestisci la tua prenotazione</p>
        }


        <div>
            <form method="post">
                <div class="half left">
                    <input type="date" id="data" asp-for="data" value="@Model.data">

                    <input asp-for="numero_tel" type="tel" id="tel"
                           pattern="[0-9]{3-6}[0-9]{7-10}" minlength="10" maxlength="15" value="@Model.numero_tel" readonly />

                    <input type="number" asp-for="numero_persone" value="@Model.numero_persone">
                    <input type="number" name="id" id="num-prenotazione"
                           placeholder="Il tuo numero prenotazione" value="@Model.id_prenotazione">

                </div>

                <div class="half right">

                    <input type="text" id="name" name="username" value="@User.Identity.Name" readonly>

                    <select asp-for="orario" placeholder="pranzo o cena">
                        <option value="@Model.orario" selected></option>
                        <option value="pranzo">pranzo</option>
                        <option value="cena">cena</option>
                    </select>
                    <input type="submit" id="cancella" asp-controller="Home" asp-action="Cancella" value="Cancella">
                    <input type="submit" id="aggiorna" asp-controller="Home" asp-action="Aggiorna" value="Modifica">

                </div>

            </form>
        </div>

    </div>
 </div>
